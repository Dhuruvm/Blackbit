---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import Card from '../components/atomic/Card.astro';
import Button from '../components/atomic/Button.astro';
---

<BaseLayout title="Contact - Blackbit Studio" description="Get in touch with us to discuss your project">
  <Navigation />
  
  <main class="pt-16 md:pt-20">
    <section class="section-padding">
      <div class="container-custom">
        <div class="text-center mb-16">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold mb-4">
            Get in <span class="text-gradient">Touch</span>
          </h1>
          <p class="text-lg text-primary-text-secondary max-w-2xl mx-auto">
            Ready to start your next project? Let's discuss how we can help
          </p>
        </div>
        
        <div class="grid lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
          <div>
            <Card>
              <h2 class="text-2xl font-display font-bold mb-6">Send us a message</h2>
              <form id="contact-form" class="space-y-6" method="POST" action="/api/contact">
                <div class="sr-only" aria-hidden="true">
                  <label for="website">Website</label>
                  <input type="text" name="website" id="website" tabindex="-1" autocomplete="off" />
                </div>
                
                <div>
                  <label for="name" class="block text-sm font-medium mb-2">
                    Name <span class="text-accent-cyan">*</span>
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-3 rounded-lg bg-primary-surface-elevated border border-primary-border focus:border-accent-cyan focus:ring-1 focus:ring-accent-cyan outline-none transition-colors"
                  />
                </div>
                
                <div>
                  <label for="email" class="block text-sm font-medium mb-2">
                    Email <span class="text-accent-cyan">*</span>
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 rounded-lg bg-primary-surface-elevated border border-primary-border focus:border-accent-cyan focus:ring-1 focus:ring-accent-cyan outline-none transition-colors"
                  />
                </div>
                
                <div>
                  <label for="subject" class="block text-sm font-medium mb-2">
                    Subject <span class="text-accent-cyan">*</span>
                  </label>
                  <input
                    type="text"
                    id="subject"
                    name="subject"
                    required
                    class="w-full px-4 py-3 rounded-lg bg-primary-surface-elevated border border-primary-border focus:border-accent-cyan focus:ring-1 focus:ring-accent-cyan outline-none transition-colors"
                  />
                </div>
                
                <div>
                  <label for="message" class="block text-sm font-medium mb-2">
                    Message <span class="text-accent-cyan">*</span>
                  </label>
                  <textarea
                    id="message"
                    name="message"
                    required
                    rows="6"
                    class="w-full px-4 py-3 rounded-lg bg-primary-surface-elevated border border-primary-border focus:border-accent-cyan focus:ring-1 focus:ring-accent-cyan outline-none transition-colors resize-y"
                  ></textarea>
                </div>
                
                <div>
                  <Button type="submit" variant="primary" size="lg" class="w-full">
                    Send Message
                  </Button>
                </div>
                
                <div id="form-message" role="alert" aria-live="polite" class="hidden"></div>
              </form>
            </Card>
          </div>
          
          <div class="space-y-6">
            <Card>
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 flex-shrink-0 flex items-center justify-center rounded-lg bg-accent-cyan/10">
                  <svg class="w-6 h-6 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-display font-semibold mb-1">Email</h3>
                  <a href="mailto:hello@blackbit.studio" class="text-primary-text-secondary hover:text-accent-cyan transition-colors">
                    hello@blackbit.studio
                  </a>
                </div>
              </div>
            </Card>
            
            <Card>
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 flex-shrink-0 flex items-center justify-center rounded-lg bg-accent-cyan/10">
                  <svg class="w-6 h-6 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-display font-semibold mb-1">Location</h3>
                  <p class="text-primary-text-secondary">
                    San Francisco, CA<br />
                    United States
                  </p>
                </div>
              </div>
            </Card>
            
            <Card>
              <h3 class="font-display font-semibold mb-4">Follow us</h3>
              <div class="flex gap-4">
                {['Twitter', 'LinkedIn', 'Dribbble', 'GitHub'].map((social) => (
                  <a
                    href="#"
                    class="w-10 h-10 flex items-center justify-center rounded-lg bg-primary-surface-elevated hover:bg-accent-cyan/10 hover:text-accent-cyan transition-colors"
                    aria-label={social}
                  >
                    <span class="sr-only">{social}</span>
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.603-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.463-1.11-1.463-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z"/>
                    </svg>
                  </a>
                ))}
              </div>
            </Card>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>

<script>
  const form = document.getElementById('contact-form');
  const formMessage = document.getElementById('form-message');
  
  if (form && formMessage) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(form);
      const website = formData.get('website');
      
      if (website) {
        return;
      }
      
      formMessage.classList.remove('hidden');
      formMessage.textContent = 'Sending message...';
      formMessage.className = 'p-4 rounded-lg bg-primary-surface-elevated text-primary-text';
      
      try {
        const response = await fetch(form.action, {
          method: 'POST',
          body: formData,
        });
        
        if (response.ok) {
          formMessage.textContent = 'Thank you! Your message has been sent successfully.';
          formMessage.className = 'p-4 rounded-lg bg-semantic-success/20 text-semantic-success border border-semantic-success/50';
          form.reset();
        } else {
          throw new Error('Failed to send message');
        }
      } catch (error) {
        formMessage.textContent = 'Sorry, there was an error sending your message. Please try again or email us directly.';
        formMessage.className = 'p-4 rounded-lg bg-semantic-error/20 text-semantic-error border border-semantic-error/50';
      }
    });
  }
</script>
