---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/atomic/Button.astro';
import Card from '../components/atomic/Card.astro';
---

<BaseLayout>
  <Navigation />
  
  <main class="pt-16 md:pt-20">
    <section class="section-padding min-h-screen flex items-center relative overflow-hidden">
      <div class="container-custom relative z-10">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <h1 class="hero-title text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-display font-bold mb-6 leading-tight">
              Creating innovative <span class="text-gradient">games & digital products</span>
            </h1>
            <p class="hero-subtitle text-lg md:text-xl text-primary-text-secondary mb-8 max-w-2xl">
              A product-focused studio building engaging games, Discord bots, and digital experiences
            </p>
            <div class="hero-buttons flex flex-wrap gap-4">
              <Button href="/portfolio" variant="primary" size="lg" class="interactive-btn">
                View our products
              </Button>
              <Button href="/about" variant="outline" size="lg" class="interactive-btn">
                About our studio
              </Button>
            </div>
          </div>
          
          <div class="hidden lg:flex justify-center items-center">
            <div class="relative w-full max-w-md rocket-container">
              <svg viewBox="0 0 400 400" class="w-full h-auto" aria-hidden="true">
                <defs>
                  <linearGradient id="rocketGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:#00E5FF;stop-opacity:1" />
                    <stop offset="100%" style="stop-color:#00B8CC;stop-opacity:1" />
                  </linearGradient>
                </defs>
                <g transform="translate(200, 200)">
                  <ellipse class="rocket-orbit-1" cx="0" cy="0" rx="150" ry="150" fill="none" stroke="url(#rocketGradient)" stroke-width="2" opacity="0.2" />
                  <ellipse class="rocket-orbit-2" cx="0" cy="0" rx="100" ry="100" fill="none" stroke="url(#rocketGradient)" stroke-width="2" opacity="0.3" />
                  <circle class="rocket-glow" cx="0" cy="0" r="30" fill="url(#rocketGradient)" opacity="0.5" />
                  <path d="M -20,-50 L 0,-80 L 20,-50 L 10,-50 L 10,30 L -10,30 L -10,-50 Z" fill="url(#rocketGradient)" />
                  <circle cx="0" cy="-60" r="8" fill="#0d0d0f" />
                  <path d="M -10,30 L -25,50 L -15,35 Z" fill="#00B8CC" />
                  <path d="M 10,30 L 25,50 L 15,35 Z" fill="#00B8CC" />
                  <path d="M -5,30 L 0,60 L 5,30 Z" fill="#00E5FF" />
                </g>
              </svg>
            </div>
          </div>
        </div>
      </div>
      
      <div class="absolute inset-0 pointer-events-none">
        <div class="animated-bg absolute top-1/4 left-1/4 w-96 h-96 bg-accent-cyan/5 rounded-full blur-3xl"></div>
        <div class="animated-bg absolute bottom-1/4 right-1/4 w-96 h-96 bg-accent-magenta/5 rounded-full blur-3xl"></div>
      </div>
    </section>
    
    <section class="section-padding bg-primary-surface">
      <div class="container-custom">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
          <div class="text-center animate-on-scroll">
            <div class="stat-number text-5xl md:text-6xl font-display font-bold text-gradient mb-2" data-suffix="+">50K</div>
            <div class="text-primary-text-secondary">Active users</div>
          </div>
          <div class="text-center animate-on-scroll">
            <div class="stat-number text-5xl md:text-6xl font-display font-bold text-gradient mb-2" data-suffix="+">15</div>
            <div class="text-primary-text-secondary">Products launched</div>
          </div>
          <div class="text-center animate-on-scroll">
            <div class="stat-number text-5xl md:text-6xl font-display font-bold text-gradient mb-2" data-suffix="+">500</div>
            <div class="text-primary-text-secondary">Discord servers</div>
          </div>
        </div>
      </div>
    </section>
    
    <section class="section-padding">
      <div class="container-custom">
        <div class="text-center mb-16 animate-on-scroll">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-display font-bold mb-4">Our Products</h2>
          <p class="text-lg text-primary-text-secondary max-w-2xl mx-auto">
            Innovative digital products that bring communities together and create memorable experiences
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          <Card hover={true} class="text-center service-card">
            <div class="service-icon w-16 h-16 mx-auto mb-4 flex items-center justify-center rounded-lg bg-accent-cyan/10">
              <svg class="w-8 h-8 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
              </svg>
            </div>
            <h3 class="text-xl font-display font-semibold mb-2">Indie Games</h3>
            <p class="text-primary-text-secondary">Immersive gaming experiences across multiple platforms</p>
          </Card>
          
          <Card hover={true} class="text-center service-card">
            <div class="service-icon w-16 h-16 mx-auto mb-4 flex items-center justify-center rounded-lg bg-accent-cyan/10">
              <svg class="w-8 h-8 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
            </div>
            <h3 class="text-xl font-display font-semibold mb-2">Discord Bots</h3>
            <p class="text-primary-text-secondary">Advanced automation and community management solutions</p>
          </Card>
          
          <Card hover={true} class="text-center service-card">
            <div class="service-icon w-16 h-16 mx-auto mb-4 flex items-center justify-center rounded-lg bg-accent-cyan/10">
              <svg class="w-8 h-8 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-xl font-display font-semibold mb-2">Web Apps</h3>
            <p class="text-primary-text-secondary">Interactive web applications and gaming platforms</p>
          </Card>
          
          <Card hover={true} class="text-center service-card">
            <div class="service-icon w-16 h-16 mx-auto mb-4 flex items-center justify-center rounded-lg bg-accent-cyan/10">
              <svg class="w-8 h-8 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-xl font-display font-semibold mb-2">Mobile Games</h3>
            <p class="text-primary-text-secondary">Engaging mobile gaming experiences for all ages</p>
          </Card>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>

<script>
  import { initAllAnimations } from '../utils/animations';
  
  document.addEventListener('DOMContentLoaded', () => {
    initAllAnimations();
  });
</script>
