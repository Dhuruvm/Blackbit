---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import Card from '../components/atomic/Card.astro';
import Button from '../components/atomic/Button.astro';

const services = [
  {
    title: "Design",
    icon: "design",
    description: "Crafting visually compelling and user-centric designs that captivate and engage your audience.",
    features: [
      "UI/UX Design",
      "Brand Identity",
      "Design Systems",
      "Prototyping"
    ]
  },
  {
    title: "Web Development",
    icon: "code",
    description: "Building robust and scalable web applications with modern technologies and best practices.",
    features: [
      "Custom Web Apps",
      "E-commerce Solutions",
      "Progressive Web Apps",
      "API Integration"
    ]
  },
  {
    title: "Audits",
    icon: "search",
    description: "Evaluating websites for performance, accessibility, and SEO to identify areas of improvement.",
    features: [
      "Performance Audits",
      "Accessibility Testing",
      "SEO Analysis",
      "Security Review"
    ]
  },
  {
    title: "Motion",
    icon: "play",
    description: "Creating engaging animations and interactive experiences that bring your brand to life.",
    features: [
      "Micro-interactions",
      "Animated Graphics",
      "Video Production",
      "3D Visualization"
    ]
  },
];
---

<BaseLayout title="Services - Blackbit Studio" description="Comprehensive digital services to bring your vision to life">
  <Navigation />
  
  <main class="pt-16 md:pt-20">
    <section class="section-padding">
      <div class="container-custom">
        <div class="text-center mb-16">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold mb-4">
            Our <span class="text-gradient">Services</span>
          </h1>
          <p class="text-lg text-primary-text-secondary max-w-2xl mx-auto">
            A comprehensive suite of services to bring your digital vision to life
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8 mb-16">
          {services.map((service) => (
            <Card hover={true}>
              <div class="flex items-start gap-4 mb-4">
                <div class="w-16 h-16 flex-shrink-0 flex items-center justify-center rounded-lg bg-accent-cyan/10">
                  {service.icon === "design" && (
                    <svg class="w-8 h-8 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                    </svg>
                  )}
                  {service.icon === "code" && (
                    <svg class="w-8 h-8 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                    </svg>
                  )}
                  {service.icon === "search" && (
                    <svg class="w-8 h-8 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                  )}
                  {service.icon === "play" && (
                    <svg class="w-8 h-8 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  )}
                </div>
                <div class="flex-1">
                  <h3 class="text-2xl font-display font-semibold mb-2">{service.title}</h3>
                  <p class="text-primary-text-secondary">{service.description}</p>
                </div>
              </div>
              <ul class="space-y-2 mb-6">
                {service.features.map((feature) => (
                  <li class="flex items-center gap-2 text-primary-text-secondary">
                    <svg class="w-5 h-5 text-accent-cyan flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
              <Button href="/contact" variant="outline" size="sm">
                Learn more
              </Button>
            </Card>
          ))}
        </div>
        
        <div class="text-center">
          <Card class="max-w-3xl mx-auto">
            <h2 class="text-2xl md:text-3xl font-display font-bold mb-4">
              Ready to start your project?
            </h2>
            <p class="text-primary-text-secondary mb-6">
              Let's discuss how we can help bring your digital vision to life
            </p>
            <Button href="/contact" variant="primary" size="lg">
              Get in touch
            </Button>
          </Card>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>
