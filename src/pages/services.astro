
---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import Card from '../components/atomic/Card.astro';
import Button from '../components/atomic/Button.astro';

const productLines = [
  {
    title: "Indie Games",
    icon: "game",
    description: "Immersive gaming experiences that captivate players with unique mechanics and compelling storytelling.",
    features: [
      "Cross-platform compatibility",
      "Engaging storylines",
      "Pixel-perfect art design",
      "Innovative gameplay mechanics"
    ],
    examples: ["Pixel Quest Adventures", "Cosmic Runner", "Mystic Realms"]
  },
  {
    title: "Discord Bots",
    icon: "bot",
    description: "Advanced automation solutions that enhance Discord communities with powerful features and seamless integration.",
    features: [
      "Advanced moderation tools",
      "Economy systems",
      "Custom commands",
      "Analytics & insights"
    ],
    examples: ["ServerGuard Pro", "Community Hub Bot", "Economy Manager"]
  },
  {
    title: "Web Applications",
    icon: "web",
    description: "Interactive web-based gaming platforms and tools that work seamlessly across all devices and browsers.",
    features: [
      "Real-time multiplayer",
      "Progressive Web Apps",
      "Cross-device sync",
      "Responsive design"
    ],
    examples: ["Neon Drift Racing", "Guild Manager", "Tournament Platform"]
  },
  {
    title: "Mobile Games",
    icon: "mobile",
    description: "Engaging mobile gaming experiences optimized for touch interfaces and designed for on-the-go entertainment.",
    features: [
      "Touch-optimized controls",
      "Offline gameplay support",
      "Social features",
      "Regular content updates"
    ],
    examples: ["Space Explorer", "Puzzle Master", "Adventure Kingdom"]
  },
];
---

<BaseLayout title="Products - Blackbit Studio" description="Innovative digital products including games and Discord bots">
  <Navigation />
  
  <main class="pt-16 md:pt-20">
    <section class="section-padding">
      <div class="container-custom">
        <div class="text-center mb-16">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold mb-4">
            Our <span class="text-gradient">Product Lines</span>
          </h1>
          <p class="text-lg text-primary-text-secondary max-w-2xl mx-auto">
            We create innovative digital products that bring communities together and deliver exceptional user experiences
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8 mb-16">
          {productLines.map((product) => (
            <Card hover={true}>
              <div class="flex items-start gap-4 mb-4">
                <div class="w-16 h-16 flex-shrink-0 flex items-center justify-center rounded-lg bg-accent-cyan/10">
                  {product.icon === "game" && (
                    <svg class="w-8 h-8 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                    </svg>
                  )}
                  {product.icon === "bot" && (
                    <svg class="w-8 h-8 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                  )}
                  {product.icon === "web" && (
                    <svg class="w-8 h-8 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  )}
                  {product.icon === "mobile" && (
                    <svg class="w-8 h-8 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                    </svg>
                  )}
                </div>
                <div class="flex-1">
                  <h3 class="text-2xl font-display font-semibold mb-2">{product.title}</h3>
                  <p class="text-primary-text-secondary">{product.description}</p>
                </div>
              </div>
              <ul class="space-y-2 mb-4">
                {product.features.map((feature) => (
                  <li class="flex items-center gap-2 text-primary-text-secondary">
                    <svg class="w-5 h-5 text-accent-cyan flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
              <div class="mb-6">
                <h4 class="text-sm font-semibold text-accent-cyan mb-2">Featured Products:</h4>
                <div class="flex flex-wrap gap-2">
                  {product.examples.map((example) => (
                    <span class="text-xs px-2 py-1 bg-primary-surface-elevated rounded">
                      {example}
                    </span>
                  ))}
                </div>
              </div>
              <Button href="/portfolio" variant="outline" size="sm">
                View products
              </Button>
            </Card>
          ))}
        </div>
        
        <div class="text-center">
          <Card class="max-w-3xl mx-auto">
            <h2 class="text-2xl md:text-3xl font-display font-bold mb-4">
              Interested in our products?
            </h2>
            <p class="text-primary-text-secondary mb-6">
              Join our community and stay updated on new releases and beta access
            </p>
            <div class="flex flex-wrap justify-center gap-4">
              <Button href="/portfolio" variant="primary" size="lg">
                Explore products
              </Button>
              <Button href="/contact" variant="outline" size="lg">
                Join community
              </Button>
            </div>
          </Card>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>
