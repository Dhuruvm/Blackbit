---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: 'GitHub', href: '#', icon: 'github' },
  { name: 'Twitter', href: '#', icon: 'twitter' },
  { name: 'LinkedIn', href: '#', icon: 'linkedin' },
  { name: 'Dribbble', href: '#', icon: 'dribbble' },
];

const footerLinks = [
  {
    title: 'Studio',
    links: [
      { name: 'About', href: '/about' },
      { name: 'Products', href: '/portfolio' },
      { name: 'Games', href: '/games' },
      { name: 'Discord Bots', href: '/bots' },
    ],
  },
  {
    title: 'Support',
    links: [
      { name: 'Documentation', href: '/docs' },
      { name: 'Community', href: '/community' },
      { name: 'Contact', href: '/contact' },
    ],
  },
];
---

<footer class="bg-primary-surface border-t border-primary-border mt-auto">
  <div class="container-custom py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
      <div class="lg:col-span-2">
        <h2 class="text-2xl font-display font-bold mb-4">BLACKBIT</h2>
        <p class="text-primary-text-secondary mb-6 max-w-md">
          A product-focused studio creating innovative games, Discord bots, and digital experiences.
        </p>
        <div class="flex gap-4">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              class="w-10 h-10 flex items-center justify-center rounded-lg bg-primary-surface-elevated hover:bg-accent-cyan/10 hover:text-accent-cyan transition-colors"
              aria-label={social.name}
            >
              <span class="sr-only">{social.name}</span>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.603-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.463-1.11-1.463-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z"/>
              </svg>
            </a>
          ))}
        </div>
      </div>
      
      {footerLinks.map((section) => (
        <div>
          <h3 class="font-semibold mb-4">{section.title}</h3>
          <ul class="space-y-2">
            {section.links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-primary-text-secondary hover:text-accent-cyan transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    
    <div class="pt-8 border-t border-primary-border">
      <p class="text-center text-primary-text-secondary text-sm">
        Â© {currentYear} Blackbit Studio. All rights reserved.
      </p>
    </div>
  </div>
</footer>
